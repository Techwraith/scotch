<form id="post-form" class="form-horizontal" action="/dashboard/post" method="POST">
    <% if(params.errors) { %>
      <ul>
      <% for(var err in params.errors) { %>
        <li><%= params.errors[err]; %></li>
      <% } %>
      </ul>
    <% } %>

    <%- partial('form', {post: {}}) %>

    <div class="menu">
      <a href="/" class="btn">go home</a>
      <a href="/dashboard" class="btn">back to dashboard</a>
      <%- contentTag('input', 'publish this post', {type: 'submit', class: 'btn btn-primary'}) %>
    </div>
</form>
