<% if (typeof post != 'undefined') { %>
<h2 class="title span8"><a href="/<%= post.slug %>"><%= post.title %></a></h2>
<div class="span8">
  <%- post.html %>
  <div class="byline">
    by <%= geddy.site.firstName + ' ' + geddy.site.lastName %> on <%= geddy.date.strftime(post.createdAt, '%m.%d.%y') %>
  </div>
</div>
<% } else { %>
  <h1><%= geddy.site.title %></h1>
  <h4>This blog is powered by <a href="http://github.com/techwraith/scotch">Scotch</a></h4>
  <p>It doesn't look like <%= geddy.site.firstName %> has posted anything yet &hellip;</p>
<% } %>
<% if (typeof posts != 'undefined' && posts.length) { %>
<div class="menu right">
  <a href="/<%= posts[1].slug; %>" class="btn btn-grey">&laquo; older post</a>
  <a href="javascript://" class="btn btn-grey btn-disabled">newer post &raquo;</a>
</div>
<% } %>
