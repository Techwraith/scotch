div.row
  div.span10
    h1.blogTitle= siteTitle
    h6.blogSubTitle= siteSubTitle
div.row
  div.span10
    - for post in posts
      div.post
        p=post.updatedAt
        h2
          a(href="/posts/"+post.slug)= post.title
        p!=post.content
  div.span5.offset1
    img.avatar(src=author.avatar)
    h3
      a(href=author.url)= author.name
    p!= author.description
    ul
      - for link in author.links
        li
          a(href=link)=link
div.row.footer
- if (more)
  a.next(href="/page/"+nextPage) Older Posts
- if (less)
  - if (previousPage > 1)
    a.previous(href="/page/"+previousPage) Newer Posts
  - else
    a.previous(href="/") Newer Posts
